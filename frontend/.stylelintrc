{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "customSyntax": "postcss-scss",
  "rules": {
    "unit-allowed-list": ["rem", "vh", "s", "deg", "%"],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true
  }
}
